<section class="feedback">
  <div class="container-fluid container-lg">
    <div class="row">
      <div class="col-12 feedback__top with-dots">
        <span class="title title_dark">What Our Clients Are Saying About Us</span>
      </div>
    </div>
    <div class="row feedback__block">
      <div class="col-12">
        <div class="swiper-container feedback__slider">
          <div class="swiper-wrapper">
            {% for feedbackItem in feedback %}
              <div class="feedback__item swiper-slide">
                <div class="feedback__image"
                     style="background-image: url(./assets/img/feedback/{{ feedbackItem.image }})"></div>
                <div class="feedback__text">
                  <span>{{ feedbackItem.name }}</span>
                  <p>{{ feedbackItem.text }}</p>
                  <p><b>{{ feedbackItem.position }}</b></p>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="pagination-wrapper">
          <div class="pagination-container">
            <div class="little-dot nav-dot little-dot--first"></div>
            <div class="little-dot">
              <div class="big-dot"></div>
            </div>
            <div class="little-dot nav-dot little-dot--last"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>