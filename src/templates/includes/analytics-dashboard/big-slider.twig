{% with {sectionClass:'big-slider-section'} %}
  <section class="{{ sectionClass }}">
    <div class="{{ sectionClass }}__slider">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for i in 1..3 %}
            <div class="swiper-slide" data-item="{{ i }}">
              <div class="{{ sectionClass }}__slide">
                <img src="./assets/img/big-slider/1.jpg" alt="">
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="{{ sectionClass }}__content">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="row">
              <div class="col-12 col-md-8">
                <div class="{{ sectionClass }}__title active" data-item="1">
                  <h2>Multiple Wearing Methods for Complete Safety</h2>
                </div>
                <div class="{{ sectionClass }}__title" data-item="2">
                  <h2>Multiple Wearing Methods Safety</h2>
                </div>
                <div class="{{ sectionClass }}__title" data-item="3">
                  <h2>Multiple for Complete Safety</h2>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="{{ sectionClass }}__controls">
                  <div class="{{ sectionClass }}__pagination">
                    <div class="pagination-wrapper">
                      <div class="pagination-container">
                        <div class="little-dot nav-dot little-dot--first"></div>
                        <div class="little-dot">
                          <div class="big-dot"></div>
                        </div>
                        <div class="little-dot nav-dot little-dot--last"></div>
                      </div>
                    </div>
                  </div>
                  <div class="{{ sectionClass }}__buttons">
                    <button class="{{ sectionClass }}__button prev">
                      <svg xmlns="http://www.w3.org/2000/svg" width="10" height="18" viewBox="0 0 10 18">
                        <path d="M.475 9.48l8.094 8.072a.679.679 0 00.958-.96L1.914 9l7.613-7.591a.678.678 0 10-.958-.96L.475 8.518a.677.677 0 000 .961z"/>
                      </svg>
                    </button>
                    <button class="{{ sectionClass }}__button next">
                      <svg xmlns="http://www.w3.org/2000/svg" width="10" height="18" viewBox="0 0 10 18">
                        <path d="M.475 9.48l8.094 8.072a.679.679 0 00.958-.96L1.914 9l7.613-7.591a.678.678 0 10-.958-.96L.475 8.518a.677.677 0 000 .961z"/>
                      </svg>
                    </button>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endwith %}